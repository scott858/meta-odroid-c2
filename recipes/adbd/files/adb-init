#!/bin/sh

DAEMON=/usr/bin/adbd

. /etc/default/adbd

if [ -e /var/run/dbus/session_bus_address ]; then
  . /var/run/dbus/session_bus_address
fi

case "$1" in
start)
    if [ "$USE_ETHERNET" = "no" ]; then
        modprobe g_ffs idVendor=${VENDOR} idProduct=${PRODUCT} iSerialNumber=${SERIAL:0:32}
        mkdir -p /dev/usb-ffs
        chmod 770 /dev/usb-ffs
        mkdir -p /dev/usb-ffs/adb
        chmod 770 /dev/usb-ffs/adb
        mount -t functionfs adb /dev/usb-ffs/adb -o uid=0,gid=0
    fi
    start-stop-daemon --start --quiet --exec $DAEMON &
    ;;
stop)
    start-stop-daemon --stop --quiet --exec $DAEMON
    if [ "$USE_ETHERNET" = "no" ]; then
        sleep 1
        umount /dev/usb-ffs/adb
        rmmod g_ffs
    fi
    ;;
restart)
    start-stop-daemon --stop --quiet --exec $DAEMON
    sleep 1
    start-stop-daemon --start --quiet --exec $DAEMON &
    ;;
*)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
esac
exit 0
